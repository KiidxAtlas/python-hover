{
    "name": "python-hover",
    "icon": "media/icon.png",
    "displayName": "üêç Python Hover - Enhanced Documentation",
    "description": "Instant Python documentation with 300+ constructs, 19+ libraries (NumPy, Pandas, FastAPI, Django, PyTorch, aiohttp, Click), practical examples, and smart context detection. Zero context switching!",
    "version": "0.5.3",
    "publisher": "KiidxAtlas",
    "author": {
        "name": "KiidxAtlas",
        "url": "https://github.com/KiidxAtlas"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/KiidxAtlas/python-hover.git"
    },
    "bugs": {
        "url": "https://github.com/KiidxAtlas/python-hover/issues"
    },
    "homepage": "https://github.com/KiidxAtlas/python-hover#readme",
    "engines": {
        "vscode": "^1.80.0"
    },
    "galleryBanner": {
        "color": "#1e415e",
        "theme": "dark"
    },
    "categories": [
        "Programming Languages",
        "Education",
        "Data Science",
        "Snippets",
        "Other"
    ],
    "keywords": [
        "python",
        "hover",
        "documentation",
        "intellisense",
        "examples",
        "learning",
        "reference",
        "methods",
        "built-ins",
        "type-hints",
        "education",
        "productivity",
        "numpy",
        "pandas",
        "matplotlib",
        "data-science",
        "machine-learning",
        "web-development",
        "fastapi",
        "django",
        "flask",
        "scikit-learn",
        "scipy",
        "pytest",
        "asyncio",
        "beautifulsoup",
        "sqlalchemy",
        "pydantic",
        "selenium",
        "pillow",
        "pytorch",
        "aiohttp",
        "click",
        "code-examples",
        "quick-reference",
        "offline",
        "beginner-friendly"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "pythonHover.clearCache",
                "title": "Clear Documentation Cache",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.openDocs",
                "title": "Open Documentation",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.copyUrl",
                "title": "Copy Documentation URL",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.insertExample",
                "title": "Insert Example at Cursor",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.increaseFontSize",
                "title": "Increase Hover Font Size",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.decreaseFontSize",
                "title": "Decrease Hover Font Size",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.showSupportedLibraries",
                "title": "Show Supported Libraries",
                "category": "Python Hover"
            }
        ],
        "configuration": {
            "title": "Python Hover",
            "properties": {
                "pythonHover.docsVersion": {
                    "type": "string",
                    "default": "auto",
                    "description": "Python version to use for documentation. Use 'auto' for automatic detection or specify a version like '3.11'."
                },
                "pythonHover.maxSnippetLines": {
                    "type": "number",
                    "default": 12,
                    "minimum": 1,
                    "maximum": 100,
                    "description": "Maximum number of lines to show in hover snippets."
                },
                "pythonHover.fontSize": {
                    "type": "string",
                    "enum": [
                        "small",
                        "medium",
                        "large"
                    ],
                    "default": "medium",
                    "description": "Font size for hover content."
                },
                "pythonHover.showEmojis": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show emoji icons in hover tooltips."
                },
                "pythonHover.showColors": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable colored sections in hover tooltips."
                },
                "pythonHover.showBorders": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show borders between sections."
                },
                "pythonHover.cacheTTL.inventoryDays": {
                    "type": "number",
                    "default": 7,
                    "minimum": 1,
                    "description": "Number of days to cache inventory files."
                },
                "pythonHover.cacheTTL.snippetHours": {
                    "type": "number",
                    "default": 48,
                    "minimum": 1,
                    "description": "Number of hours to cache documentation snippets."
                },
                "pythonHover.enableKeywordDocs": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable keyword documentation."
                },
                "pythonHover.enhancedMethodResolution": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable smart method resolution to better detect method context."
                },
                "pythonHover.showPracticalExamples": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show practical code examples in hover documentation."
                },
                "pythonHover.showRelatedMethods": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show related methods and alternatives."
                },
                "pythonHover.showVersionInfo": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show Python version information when available."
                },
                "pythonHover.enableDebugLogging": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable verbose debug logging in the console (for troubleshooting)."
                },
                "pythonHover.requestTimeout": {
                    "type": "number",
                    "default": 10000,
                    "minimum": 1000,
                    "maximum": 60000,
                    "description": "Timeout in milliseconds for HTTP requests to documentation sites (default: 10 seconds)."
                },
                "pythonHover.openDocsInEditor": {
                    "type": "boolean",
                    "default": false,
                    "description": "Open documentation links in VS Code's Simple Browser instead of external browser."
                },
                "pythonHover.telemetry": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable telemetry data collection."
                },
                "pythonHover.debounceDelay": {
                    "type": "number",
                    "default": 150,
                    "minimum": 0,
                    "maximum": 1000,
                    "description": "Delay in milliseconds before showing hover documentation (reduces flicker when moving cursor quickly)."
                },
                "pythonHover.versionCacheTTL": {
                    "type": "number",
                    "default": 30,
                    "minimum": 5,
                    "maximum": 300,
                    "description": "How long to cache Python version detection (in seconds). Lower values detect environment changes faster, higher values improve performance."
                },
                "pythonHover.customLibraries": {
                    "type": "array",
                    "default": [],
                    "description": "Custom library documentation sources. Add your own libraries with Intersphinx inventory URLs.",
                    "items": {
                        "type": "object",
                        "required": [
                            "name",
                            "inventoryUrl",
                            "baseUrl"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "description": "Library name (e.g., 'mylib')"
                            },
                            "inventoryUrl": {
                                "type": "string",
                                "description": "URL to the Intersphinx objects.inv file"
                            },
                            "baseUrl": {
                                "type": "string",
                                "description": "Base URL for documentation (e.g., 'https://mylib.readthedocs.io/en/latest/')"
                            }
                        }
                    },
                    "markdownDescription": "Add custom library documentation sources. Each entry should have:\n\n- `name`: Library name (e.g., 'mylib')\n- `inventoryUrl`: URL to objects.inv file\n- `baseUrl`: Documentation base URL\n\nExample:\n```json\n[\n  {\n    \"name\": \"mylib\",\n    \"inventoryUrl\": \"https://mylib.readthedocs.io/en/latest/objects.inv\",\n    \"baseUrl\": \"https://mylib.readthedocs.io/en/latest/\"\n  }\n]\n```"
                },
                "pythonHover.experimental.autoDetectLibraries": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "**‚ö†Ô∏è Experimental**: Automatically detect and fetch documentation for third-party libraries imported in your code. When enabled, the extension will:\n\n- Detect imports from third-party packages\n- Automatically download and parse their Intersphinx inventory files\n- Provide hover documentation for imported symbols\n\nThis feature requires:\n- Libraries to have published `objects.inv` files\n- Python environment with the packages installed (for version detection)\n\n**Note:** This feature is experimental and may impact performance when working with many third-party libraries. Disable if you experience slowdowns."
                },
                "pythonHover.ui.showParameterTables": {
                    "type": "boolean",
                    "default": true,
                    "description": "Display function parameters in formatted tables for easier reading."
                },
                "pythonHover.ui.showSignatures": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show function/method signatures prominently at the top of hovers."
                },
                "pythonHover.ui.showDeprecationWarnings": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show prominent warnings for deprecated APIs with suggested alternatives."
                },
                "pythonHover.ui.showReturnTypes": {
                    "type": "boolean",
                    "default": true,
                    "description": "Display return type information prominently in hover tooltips."
                },
                "pythonHover.ui.showQuickActions": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show quick action links (docs, copy, insert) at the top of hover tooltips."
                },
                "pythonHover.ui.showSeeAlso": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show 'See Also' section with related functions and methods."
                },
                "pythonHover.ui.showPerformanceHints": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show time/space complexity information when available (experimental)."
                },
                "pythonHover.ui.showKeyboardHints": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show keyboard shortcut hints at the bottom of hover tooltips."
                },
                "pythonHover.ui.maxContentLength": {
                    "type": "number",
                    "default": 800,
                    "minimum": 200,
                    "maximum": 2000,
                    "description": "Maximum character length for hover content before smart truncation with 'Read more...' link."
                },
                "pythonHover.testing.forceRealHover": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "Testing only: When true, disables test-mode hover shortcut so integration tests exercise full hover pipeline."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile && npm run compile-tests",
        "test": "node ./out/test/runTest.js",
        "test:snapshots": "npm run compile && npm run compile-tests && SNAPSHOT=1 node ./out/test/runTest.js",
        "test:unit": "mocha -u tdd -r ts-node/register -r ./src/test/setup/unit.setup.js \"src/test/unit/**/*.test.ts\"",
        "test:unit:watch": "mocha -u tdd -r ts-node/register -r ./src/test/setup/unit.setup.js --watch \"src/test/unit/**/*.test.ts\"",
        "lint": "eslint src --ext ts",
        "clean": "rm -rf out && rm -rf dist && rm -rf node_modules/.cache"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.1",
        "@types/node": "18.x",
        "@types/node-fetch": "^2.6.13",
        "@types/pako": "^2.0.0",
        "@types/vscode": "^1.80.0",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "@vscode/test-electron": "^2.3.4",
        "eslint": "^8.47.0",
        "glob": "^10.3.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.1.6",
        "webpack": "^5.102.0",
        "webpack-cli": "^6.0.1",
        "mock-require": "^3.0.3"
    },
    "dependencies": {
        "node-fetch": "^2.6.12",
        "pako": "^2.1.0"
    }
}
