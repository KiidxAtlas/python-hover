{
    "name": "python-hover-docs",
    "displayName": "Python Documentation Hover",
    "description": "Shows official Python documentation when hovering Python syntax",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.80.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "python"
            }
        ],
        "commands": [
            {
                "command": "pythonHover.clearCache",
                "title": "Clear Cache",
                "category": "Python Hover"
            },
            {
                "command": "pythonHover.openDocumentation",
                "title": "Open Documentation",
                "category": "Python Hover"
            }
        ],
        "configuration": {
            "title": "Python Hover Documentation",
            "properties": {
                "pythonHover.docsVersion": {
                    "type": "string",
                    "default": "auto",
                    "enum": [
                        "auto",
                        "3.8",
                        "3.9",
                        "3.10",
                        "3.11",
                        "3.12",
                        "3.13"
                    ],
                    "description": "Python documentation version to use"
                },
                "pythonHover.maxSnippetLines": {
                    "type": "number",
                    "default": 20,
                    "description": "Maximum lines to show in documentation snippets (including examples)"
                },
                "pythonHover.cacheTTL.inventoryDays": {
                    "type": "number",
                    "default": 7,
                    "description": "Days to cache intersphinx inventory files"
                },
                "pythonHover.cacheTTL.snippetHours": {
                    "type": "number",
                    "default": 48,
                    "description": "Hours to cache documentation snippets"
                },
                "pythonHover.enableKeywordDocs": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable documentation for Python keywords"
                },
                "pythonHover.telemetry": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable telemetry (disabled by default)"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.80.0",
        "@types/node": "18.x",
        "@types/pako": "^2.0.0",
        "@types/mocha": "^10.0.1",
        "@typescript-eslint/eslint-plugin": "^6.4.1",
        "@typescript-eslint/parser": "^6.4.1",
        "eslint": "^8.47.0",
        "typescript": "^5.1.6",
        "mocha": "^10.2.0",
        "glob": "^10.3.0",
        "@vscode/test-electron": "^2.3.4"
    },
    "dependencies": {
        "node-fetch": "^3.3.2",
        "pako": "^2.1.0"
    }
}
